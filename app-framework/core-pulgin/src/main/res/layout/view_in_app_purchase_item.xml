<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_8_dp"
    android:layout_marginEnd="@dimen/dimen_8_dp"
    android:layout_marginTop="24dp"
    android:paddingEnd="@dimen/dimen_24_dp"
    android:paddingBottom="@dimen/dimen_12_dp"
    android:id="@+id/parent_view"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingDefaultResource">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"

            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_14_sp"
                    android:paddingStart="@dimen/dimen_16_dp"
                    android:paddingEnd="@dimen/dimen_16_dp"
                    android:paddingTop="@dimen/dimen_4_dp"
                    android:paddingBottom="@dimen/dimen_4_dp"
                    android:textStyle="bold"
                    android:id="@+id/offer_name"
                    android:textColor="@color/black"
                    android:background="@drawable/offer_strip"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="@dimen/dimen_16_dp"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:text="3334"
                    android:id="@+id/packName"
                    />

                <TextView
                    android:id="@+id/recurring_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/recuringanytime_with_trial"
                    android:layout_marginStart="@dimen/dimen_16_dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:textSize="@dimen/dimen_12_sp"
                    tools:ignore="MissingPrefix"
                    />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            >


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/full_price">

                        <TextView
                            android:id="@+id/show_price"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="5000"
                            android:textColor="#F91818"
                            android:textSize="18sp" />
                        <View
                            android:layout_width="80dp"
                            android:layout_height="2dp"
                            android:background="#F91818"
                            android:layout_centerVertical="true"
                            />

                </RelativeLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="3334"
                    android:id="@+id/onetime_price"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:id="@+id/save"
                    >

                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="Save"
                            android:textSize="@dimen/dimen_12_sp"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            tools:ignore="MissingPrefix"
                            />

                        <TextView
                            android:id="@+id/save_percent"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:gravity="center"
                            android:text="20%"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_12_sp"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix" />

                </LinearLayout>





        </LinearLayout>

</RelativeLayout>
